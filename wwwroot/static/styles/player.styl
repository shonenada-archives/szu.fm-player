#szu-fm-player
    display: none;

.default
    & #music-box
        font: 9px 'Lucida Sans Unicode', 'Trebuchet MS', Arial, Helvetica;
        background: #212121;
        background-images: -webkit-gradient(linear, left top, left bottom, from(#1B1B1B), to(#212121));
        background-images: -webkit-linear-gradient(top, #1B1B1B, #212121);
        background-images: -moz-linear-gradient(top, #1B1B1B, #212121);
        background-images: -ms-linear-gradient(top, #1B1B1B, #212121);
        background-images: -o-linear-gradient(top, #1B1B1B, #212121);
        background-images: linear-gradient(top, #1B1B1B, #212121);

        -moz-border-radius: 3px;
        -webkit-border-radius: 3px;
        border-radius: 3px;

        text-shadow: 0 1px 0 rgba(255,255,255,0.5);
        -webkit-box-shadow: 10px 10px 25px #ccc;
        -moz-box-shadow: 10px 10px 25px #ccc;
        box-shadow: 10px 10px 25px #ccc;

        opacity: 0.9;

        padding: 2px 5px;
        position: absolute;
        z-index: 9;
        border-width: 1px;
        border-style: solid;
        border-color: #488BF0 #488BF0 #488BF0 #488BF0;
        width: 775px;
        height: 40px;

    & #btn-rewind
        width:0px;
        padding: 10px 10px 10px 10px;
        float: left;
        height: 20px;
        background: url('../images/sk-dark.png') 0px 2px no-repeat;
        margin-right: 8px;
        margin-left: 10px;

        &:hover
            background-position: 0px -30px;

    & #btn-ff
        width: 0px;
        padding: 10px 10px 10px 10px;
        float: left; 
        height: 20px;
        background: url('../images/sk-dark.png') 0px -62px no-repeat;
        margin-right: 8px;

        &:hover
            background-position: 0px -92px;

    & #process-controller
        width: 500px;
        padding: 5px 10px 10px 10px;
        float: left; 
        height: 20px;
        margin-right: 12px;
        color: #ffffff;

        & #song-name
            float: left;

        & #song-time
            float: right;

        & #process-bar
            width: 500px;
            float: left;
            height: 2px;
            cursor: pointer;
            background-color: #000000;
            margin-top: 7px;

        & #process-block
            width: 0px;
            position: absolute;     
            height: 2px;
            left: 131px;
            top: 30px;
            cursor: pointer;
            background-color: #7A8093;

    & #voice-controller
        display: inline-block;

        & #btn-mute
            width: 0px;
            padding: 10px 10px 10px 10px;
            float: left; 
            height: 17px;
            background: url('../images/sk-dark.png') -28px -180px no-repeat;  
            margin-right: 2px;

            &:hover
                background-position: -28px -212px;

    & #volume-bar
        width: 66px;
        height: 2px;
        cursor: pointer;
        background-color: #000;
        float: left;
        margin-top: 19px;
        margin-right: 6px;

    & #volume-block
        width: 66px;
        position: absolute;
        height: 2px;
        left: 675px;
        top: 21px;
        cursor: pointer;
        background-color: #7A8093;

    & #btn-full-voice
        width: 0px;
        padding: 10px 10px 10px 10px;
        float: left; 
        height: 17px;
        background:url('../images/sk-dark.png') -28px -116px no-repeat;

        &:hover
            background-position: -28px -148px;

    & .btn-play
        width: 25px;
        padding: 10px 15px 5px 10px;
        float: left; 
        height: 20px;
        background: url('../images/sk-dark.png') -80px -130px no-repeat;
  
        &:hover
            background-position: -80px -166px;

    & .btn-stop
        width: 14px;
        padding: 10px 10px 5px 10px;
        float: left; 
        height: 20px;
        background: url('../images/sk-dark.png') -50px -130px no-repeat;
        margin-right: 16px;
        &:hover
            background-position: -50px -165px;
